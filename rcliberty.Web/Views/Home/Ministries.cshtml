@section scripts {
    <script>
        $().ready(function () {
            //on page load, if the user clicked "Core" img on Index page, display
            //"Core Values" as active - else, display "Our Culture"
            if (localStorage.getItem("prevPath") == "/Home/Index"
                || localStorage.getItem("prevPath") == "/"
                || localStorage.getItem("prevPath") == "/Home"
                || localStorage.getItem("prevPath") == "/Home/") {
                $('#rc-ministries-accordion').accordion({
                    active: 1,
                    collapsible: true,
                    header: "h2",
                    heightStyle: "content"
                });
            } else {
                $('#rc-ministries-accordion').accordion({
                    active: 0,
                    collapsible: true,
                    header: "h2",
                    heightStyle: "content"
                });
            };
            //remove the local variable after use
            localStorage.removeItem("prevPath");
        });
    </script>
}