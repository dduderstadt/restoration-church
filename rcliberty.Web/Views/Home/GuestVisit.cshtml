@{
    TempData["CurrentAction"] = Html.GetCurrentAction();
    TempData.Peek("CurrentAction");
}

<form method="post" action="/Home/GuestVisit" id="frmGuestVisit">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div id="guestVisitName">
            <div id="guestVisitFName">
                <div>
                    <input type="text" class="form-control" id="firstName" name="FirstName" placeholder="First Name" required maxlength="15" />
                </div>
            </div>
            <div id="guestVisitLName">
                <div>
                    <input type="text" class="form-control" id="lastName" name="LastName" placeholder="Last Name" maxlength="25" />
                </div>
            </div>
        </div>
        <div id="guestVisitContact">
            <div id="guestVisitEmail">
                <div>
                    <input type="email" class="form-control" id="email" name="Email" placeholder="you@email.com" maxlength="100" />
                </div>
            </div>
            <div id="guestVisitPhone">
                <div>
                    <input type="tel" class="form-control" id="phoneNbr" name="PhoneNbr" placeholder="123-456-7890" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-6" for="PreferredContact" style="text-align: left;">How may we contact you?</label>
            <div class="col-md-6" style="display: inline-block;">
                <select id="preferredContact" name="PreferredContact" class="form-control" onchange="verifyContact(this)">
                    <option disabled selected>Select an option</option>
                    <option value="phone">Phone</option>
                    <option value="email">Email</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-8" for="IsBringingKids" style="text-align: left;">Are you bringing any children with you?</label>
            <div class="col-md-4" style="display: inline-block;">
                <select id="isBringingKids" name="IsBringingKids" class="form-control" onchange="isBringingKidsCheck(this)">
                    <option disabled selected>Select an option</option>
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
            </div>
        </div>
        <div class="form-group row hidden" id="kidsDetail">
            <label class="control-label col-md-8" for="totalNbrOfKids" style="text-align: left;">Total # of children that will be attending?</label>
            <div class="col-md-4">
                <input type="number" name="totalNbrOfKids" id="totalNbrOfKids" class="form-control" placeholder="# (i.e. 3)" @*onblur="generateRows(this)"*@ />
            </div>
        </div>
        <div class="hidden" id="kidsNames">
            @*<div class="col-md-6" id="kidsNames">
                    <input type="text" class="form-control" id="kid1Name" name="kid1Name" placeholder="First Name" />
                </div>*@
            @*<div class="col-md-6">
                    <button type="button" class="btn btn-success" style="width: 100%;" disabled="disabled">Add</button>
                </div>*@
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <textarea class="form-control text-box multi-line" id="addtlQuestions" name="AdditionalQuestions" placeholder="Do you have any questions we can answer before your visit?" rows="5" style="resize: none;"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <button type="button" id="cancelVisit" class="btn btn-warning pull-left" data-dismiss="modal">Nevermind</button>
                <input type="submit" class="btn rc-btn pull-right" value="See you soon!" />
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
}