@{
    ViewBag.Title = "Home Page";
}

<div class="clearfix"></div>

@if (ViewBag.EmailConfirmation != null)
{
    <div id="rc-connect-success" class="alert-success">
        <p>@ViewBag.EmailConfirmation</p>
    </div>
}

<div id="rc-main-slider" class="carousel slide" data-ride="carousel">
    <!-- indicator icons -->
    <ol class="carousel-indicators">
        @* commented out for Duck Dynasty event *@
        @*<li data-target="#rc-main-slider" data-slide-to="0" class="active"></li>*@
        @*<li data-target="#rc-main-slider" data-slide-to="1"></li>*@

        @*<li data-target="#rc-main-slider" data-slide-to="2"></li>*@
    </ol>

    <!-- slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/img/just-believe-banner.jpg" alt="Current Series" style="width:100%;">
            @*<img src="~/Content/img/duck-dynasty-promo-banner.png" alt="Duck Dynasty October 8th" style="width: 100%;" />*@
        </div>

        @* commented out for Duck Dynasty event *@
        @*<div class="item">
                <img src="~/Content/img/the-experience-banner.jpg" alt="The Experience" style="width:100%;">
            </div>*@

        @*<div class="item">
                <img src="~/Content/img/theCapitol-promo-resize2.png" alt="The Capitol" style="width:100%;" />
            </div>*@
    </div>

    <!-- left & right controls -->
    @* commented out for Duck Dynasty event *@
    @*<a class="left carousel-control" href="#rc-main-slider" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#rc-main-slider" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>*@
</div>

<div class="spacer"></div>

<div id="rc-main-content">
    <div id="core-sub" class="container-half-screen">
        <a href="@Url.Action("Discover")">
            <img src="~/Content/img/core_tile.png" />
        </a>
    </div>
    <div id="life-groups-sub" class="container-half-screen">
        <a href="@Url.Action("Grow")">
            <img src="~/Content/img/life-groups_tile.png" />
        </a>
    </div>
    <div class="clearfix"></div>
</div>

@section scripts{
    <script>
        //redirect to Home/Grow and open the #life-groups-modal
        $("#life-groups-sub").click(function getPathName() {
            var path = window.location.pathname;
            localStorage.setItem("prevPath", path);
        });

        $("#core-sub").click(function getPathName() {
            var path = window.location.pathname;
            localStorage.setItem("prevPath", path);
        });

        //fade out email confirmation
        setTimeout(function () {
            $("#rc-connect-success").fadeOut(1000);
        }, 3000);
    </script>
}