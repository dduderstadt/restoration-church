@{
    ViewBag.Title = "Home Page";
}

<div id="rc-main-slider" class="carousel slide" data-ride="carousel">
    <!-- indicator icons -->
    <ol class="carousel-indicators">
        <li data-target="#rc-main-slider" data-slide-to="0" class="active"></li>
        <li data-target="#rc-main-slider" data-slide-to="1"></li>
    </ol>

    <!-- slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/img/the-experience-banner.jpg" alt="The Experience" style="width:100%;">
        </div>

        <div class="item">
            <img src="~/Content/img/weird-stuff-banner.jpg" alt="Current Series" style="width:100%;">
        </div>
    </div>

    <!-- left & right controls -->
    <a class="left carousel-control" href="#rc-main-slider" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#rc-main-slider" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="spacer"></div>

<div id="rc-main-content">
    <div class="pull-left">
        <img src="~/Content/img/core_tile.png" />
    </div>
    <div class="pull-right">
        <img src="~/Content/img/life-groups_tile.png" />
    </div>
    <div class="clearfix"></div>
</div>