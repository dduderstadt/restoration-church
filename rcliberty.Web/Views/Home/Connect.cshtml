@{
    ViewBag.Title = "Connect";
}

<div>
    <img src="~/Content/img/connect_header.png" />
</div>

<div class="spacer"></div>

<div id="rc-connect">

    @*@if (TempData["EmailError"] != null)
    {
        <div id="rc-connect-error" class="alert-danger">
            <p>@TempData["EmailError"]</p>
        </div>
    }*@

    <div class="container-half-screen">
        <h2>We're in this <span class="emphasis">together</span>...</h2>
        <div id="rc-connect-left">
            <h4>Embarking on any new journey requires more than an idea - a plan and a map on <span class="emphasis">how to get there.</span></h4>
            <br />
            <p>
                Join us on <span class="emphasis">Sundays</span> @Html.Raw("@")<span class="emphasis"> 10:30</span> am and let us share the
                <i>vision</i> of Restoration Church with you!
            </p>
            <h3><span class="emphasis">New</span> to the area?</h3>
            <p>
                Maybe it's just been a <i>while</i> since you've been to church - that's <span class="emphasis"> okay</span>; or,
                maybe you and your family feel like you're being drawn somewhere <span class="emphasis">new</span>. Whatever the reason,
                we always love to welcome those who are looking to get involed with what's going on at RC Liberty.
            </p>
        </div>
    </div>

    <div class="container-half-screen">
        <h2><span class="emphasis">Connect</span> with us</h2>
        <form method="post" action="/Home/Connect">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div id="connectName">
                    <div id="connectFName">
                        <div>
                            <input type="text" class="form-control" id="rcConnectFirstName" name="FirstName" placeholder="First Name" required maxlength="15" />
                        </div>
                    </div>
                    <div id="connectLName">
                        <div>
                            <input type="text" class="form-control" id="rcConnectLastName" name="LastName" placeholder="Last Name" maxlength="25" />
                        </div>
                    </div>
                </div>

                <div id="connectDetail">
                    <div id="connectSubject">
                        <div>
                            <input type="text" class="form-control" placeholder="Subject" id="rcConnectSubject" name="Subject" maxlength="15" />
                        </div>
                    </div>
                    <div id="connectEmail">
                        <div>
                            <input type="email" class="form-control" placeholder="you@email.com" id="rcConnectEmail" name="Email" required />
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <textarea class="form-control text-box multi-line" id="rcConnectMessage" name="Message" placeholder="Please type your message here" rows="8" style="resize: none;" required></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <input id="rc-connect-btn" type="submit" value="Connect" class="btn btn-default" style="width: 100%;" />
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="clearfix"></div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        //setTimeout(function () {
        //    $("#rc-connect-error").fadeOut(1000);
        //}, 3000);

        function PopulateFieldsOnError(firstName, lastName, subject, email, message) {
            $('#rcConnectFirstName').val(firstName);
            $('#rcConnectLastName').val(lastName);
            $('#rcConnectSubject').val(subject);
            $('#rcConnectEmail').val(email);
            $('#rcConnectMessage').val(message);
        }

    </script>

    @if(TempData["ConnectFieldValues"] != null)
    {
        <script type="text/javascript">
            @Html.Raw(TempData["ConnectFieldValues"])
        </script>
    }
}