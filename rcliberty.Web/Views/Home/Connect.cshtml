@model rcliberty.Web.Models.ContactViewModel

@{
    ViewBag.Title = "Connect";
}

<div>
    <img src="~/Content/img/connect_header.png" />
</div>

<div class="spacer"></div>

<div id="rc-connect">

    <div class="container-half-screen">
        <h2>We're in this <span class="emphasis">together</span>...</h2>
        <div id="rc-connect-left">
            <h4>Embarking on any new journey requires more than an idea - a plan and a map on <span class="emphasis">how to get there.</span></h4>
            <br />
            <p>
                Join us on <span class="emphasis">Sundays</span> @Html.Raw("@")<span class="emphasis"> 10:30</span> am and let us share the
                <i>vision</i> of Restoration Church with you!
            </p>
            <h3><span class="emphasis">New</span> to the area?</h3>
            <p>
                Maybe it's just been a <i>while</i> since you've been to church - that's <span class="emphasis"> okay</span>; or,
                maybe you and your family feel like you're being drawn somewhere <span class="emphasis">new</span>. Whatever the reason,
                we always love to welcome those who are looking to get involed with what's going on at RC Liberty.
            </p>
        </div>
    </div>

    <div class="container-half-screen">
        <h2><span class="emphasis">Connect</span> with us</h2>
        @using (Html.BeginForm("Connect", "Home", FormMethod.Post))
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="field">
                    <div class="rc-connect-name text-field">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                    </div>
                    <div class="rc-connect-name text-field">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="field">
                    @*<div class="col-md-10">*@
                    <div class="text-field">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @placeholder = "Subject" } })
                    </div>
                </div>

                <div class="field">
                    @*<div class="col-md-10">*@
                    <div class="text-field">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "you@email.com" } })
                    </div>
                </div>

                <div class="field">
                    @*<div class="col-md-10">*@
                    <div class="text-field">
                        @Html.EditorFor(model => model.Message, new
                   {
                       htmlAttributes = new
                       {
                           @class = "form-control",
                           @placeholder = "Your Message",
                           @cols = 5,
                           @rows = 10
                       }
                   })
                    </div>
                </div>

                <div class="field">
                    @*<div class="col-md-offset-2 col-md-10">*@
                    <div class="text-field">
                        <input id="rc-connect-btn" type="submit" value="Connect" class="btn btn-default" />
                    </div>
                </div>

                <div class="clearfix"></div>
            </div>
        }
    </div>

    <div class="clearfix"></div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
}